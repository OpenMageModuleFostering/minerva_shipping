<config>
    <modules>
        <Minerva_Shipping>
            <version>0.1.0</version>
            <depends>
                <Mage_Shipping />
            </depends>
        </Minerva_Shipping>
    </modules>
    <global>
        <models>
            <mpshipping>
                <class>Minerva_Shipping</class>
            </mpshipping>
        </models>
        <resources>
            <mpshipping_setup>
                <setup>
                    <module>Minerva_Shipping</module>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
            </mpshipping_setup>
            <mpshipping_read>
                <connection>
                    <use>local_read</use>
                </connection>
            </mpshipping_read>
        </resources>
        <sales>
            <shipping>
                <carriers>
                    <multiflat>
                        <class>Minerva_Shipping_Model_Carrier_Multiflat</class>
                    </multiflat>
                </carriers>
            </shipping>
        </sales>
    </global>

    <default>
        <carriers>
            <multiflat>
                <active>0</active>
                <model>minerva_shipping_model_carrier_multiflat</model>
                <name>Pickup at Event</name>
				<details>Enter pickup instructions here.</details>
                <title>No Charge</title>
                <handling_fee>0</handling_fee>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
            </multiflat>
        </carriers>
    </default>
</config> 